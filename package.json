{
  "name": "booking-app",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@booking-app/web",
    "dev:mobile": "turbo dev --filter=@booking-app/mobile",
    "build": "turbo build",
    "build:web": "turbo build --filter=@booking-app/web",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean && rm -rf node_modules",
    "firebase:emulators": "firebase emulators:start",
    "firebase:deploy": "firebase deploy",
    "firebase:deploy:rules": "firebase deploy --only firestore:rules",
    "firebase:deploy:functions": "firebase deploy --only functions"
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "pnpm": {
    "overrides": {
      "@booking-app/web>react": "18.3.1",
      "@booking-app/web>react-dom": "18.3.1",
      "@booking-app/mobile>react": "19.1.0"
    }
  }
}
