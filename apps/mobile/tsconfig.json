{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "@booking-app/shared": ["../../packages/shared/src"],
      "@booking-app/shared/*": ["../../packages/shared/src/*"],
      "@booking-app/theme": ["../../packages/theme/src"],
      "@booking-app/theme/*": ["../../packages/theme/src/*"],
      "@booking-app/firebase": ["../../packages/firebase/src"],
      "@booking-app/firebase/*": ["../../packages/firebase/src/*"],
      "@booking-app/ui": ["../../packages/ui/src"],
      "@booking-app/ui/*": ["../../packages/ui/src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": ["node_modules"]
}
