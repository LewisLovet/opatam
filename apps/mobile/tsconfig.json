{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "@booking-app/shared": ["../../packages/shared/src"],
      "@booking-app/shared/*": ["../../packages/shared/src/*"],
      "@booking-app/theme": ["../../packages/theme/src"],
      "@booking-app/theme/*": ["../../packages/theme/src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
