{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "ES2022"],
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@booking-app/shared": ["../../packages/shared/src"],
      "@booking-app/shared/*": ["../../packages/shared/src/*"],
      "@booking-app/theme": ["../../packages/theme/src"],
      "@booking-app/theme/*": ["../../packages/theme/src/*"],
      "@booking-app/firebase": ["../../packages/firebase/src"],
      "@booking-app/firebase/*": ["../../packages/firebase/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
